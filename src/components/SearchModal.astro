---
// Search modal component - will be hydrated with client-side JS
---

<div id="search-modal" class="fixed inset-0 z-50 hidden">
  <!-- Backdrop -->
  <div
    id="search-backdrop"
    class="fixed inset-0 bg-black/50 dark:bg-black/70 backdrop-blur-sm"
    aria-hidden="true"
  ></div>

  <!-- Modal -->
  <div id="search-modal-wrapper" class="fixed inset-0 flex items-start justify-center pt-[10vh] px-4">
    <div id="search-modal-content" class="bg-white dark:bg-gray-800 rounded-lg shadow-2xl max-w-2xl w-full max-h-[80vh] flex flex-col overflow-hidden">

      <!-- Search Input -->
      <div class="p-4 border-b border-gray-200 dark:border-gray-700">
        <div class="relative">
          <svg
            class="absolute left-3 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>

          <input
            id="search-input"
            type="text"
            placeholder="Search documentation..."
            autocomplete="off"
            class="w-full pl-10 pr-4 py-3 bg-transparent border-none focus:outline-none focus:ring-0 text-gray-900 dark:text-gray-100 placeholder-gray-400"
            aria-label="Search documentation"
            aria-autocomplete="list"
            aria-controls="search-results"
          />

          <kbd class="absolute right-3 top-1/2 -translate-y-1/2 px-2 py-1 text-xs font-semibold text-gray-500 dark:text-gray-400 bg-gray-100 dark:bg-gray-700 rounded">
            ESC
          </kbd>
        </div>
      </div>

      <!-- Search Results -->
      <div
        id="search-results"
        class="flex-1 overflow-y-auto p-2"
        role="listbox"
        aria-label="Search results"
      >
        <!-- Loading state -->
        <div id="search-loading" class="hidden p-8 text-center text-gray-500 dark:text-gray-400">
          <svg class="animate-spin h-8 w-8 mx-auto mb-2 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
          <p>Loading search index...</p>
        </div>

        <!-- Empty state -->
        <div id="search-empty" class="p-8 text-center text-gray-500 dark:text-gray-400">
          <p>Start typing to search documentation</p>
        </div>

        <!-- No results -->
        <div id="search-no-results" class="hidden p-8 text-center text-gray-500 dark:text-gray-400">
          <p>No results found</p>
        </div>

        <!-- Results will be inserted here by JS -->
        <ul id="search-results-list" class="space-y-1">
        </ul>
      </div>

      <!-- Footer with keyboard hints -->
      <div class="p-3 border-t border-gray-200 dark:border-gray-700 flex items-center justify-between text-xs text-gray-500 dark:text-gray-400">
        <div class="flex items-center gap-4">
          <span class="flex items-center gap-1">
            <kbd class="px-1.5 py-0.5 bg-gray-100 dark:bg-gray-700 rounded">↑</kbd>
            <kbd class="px-1.5 py-0.5 bg-gray-100 dark:bg-gray-700 rounded">↓</kbd>
            to navigate
          </span>
          <span class="flex items-center gap-1">
            <kbd class="px-1.5 py-0.5 bg-gray-100 dark:bg-gray-700 rounded">↵</kbd>
            to select
          </span>
        </div>
        <span class="flex items-center gap-1">
          <kbd class="px-1.5 py-0.5 bg-gray-100 dark:bg-gray-700 rounded">ESC</kbd>
          to close
        </span>
      </div>
    </div>
  </div>
</div>

<style>
  /* Smooth transitions */
  #search-modal {
    transition: opacity 150ms ease-in-out;
  }

  #search-modal.show {
    display: flex;
  }

  /* Highlight matched text */
  :global(.search-highlight) {
    background-color: #fef08a;
    font-weight: 600;
  }

  :global(.dark .search-highlight) {
    background-color: #ca8a04;
  }
</style>
