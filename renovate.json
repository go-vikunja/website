{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "groupName": "astro",
      "matchPackageNames": [
        "@astrojs/{/,}**",
        "astro{/,}**"
      ]
    },
    {
      "groupName": "tailwindcss",
      "matchPackageNames": [
        "@tailwindcss/{/,}**",
        "tailwindcss{/,}**"
      ]
    }
  ]
}
